    <script>
        function OpenNotifiction(image, text, title) {
            var x = 0;
            document.getElementById("modal-lg-image").style.display = 'none';
            document.getElementById("modal-lg-btn").style.display = 'none';
            if (image != '') {
                if (image.includes("JPEG")) {
                    x = 1;
                } else if (image.includes("jpeg")) {
                    x = 1;
                } else if (image.includes("PNG")) {
                    x = 1;
                } else if (image.includes("png")) {
                    x = 1;
                } else if (image.includes("JPG")) {
                    x = 1;
                } else if (image.includes("jpg")) {
                    x = 1;
                } else if (image.includes("PDF")) {
                    x = 2;
                } else if (image.includes("pdf")) {
                    x = 2;
                }
            }
            if (x == 1) {
                document.getElementById("modal-lg-btn").style.display = 'none';
                document.getElementById("modal-lg-image").style.display = 'block';
                document.getElementById("modal-lg-image").src = image;
            } else if (x == 2) {
                document.getElementById("modal-lg-btn").style.display = 'block';
                document.getElementById("modal-lg-image").style.display = 'none';
                document.getElementById("modal-lg-btn").href = image;
            }
            if (text != '') {
                document.getElementById("modal-lg-paragraph").innerText = text;
            } else {
                document.getElementById("modal-lg-paragraph").display = 'none'
            }
            if (title != '') {
                document.getElementById("modal-lg-title").innerText = title;
            } else {
                document.getElementById("modal-lg-title").display = 'none'
            }
            $("#modal-lg-general").modal();
        }
    </script>

